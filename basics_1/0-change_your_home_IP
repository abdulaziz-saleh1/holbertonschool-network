#!/usr/bin/env bash
# Configure /etc/hosts so that localhost -> 127.0.0.2 and facebook.com -> 8.8.8.8

# Remove the default localhost IPv4 mapping (keep IPv6 untouched)
sed -i -E '/^[[:space:]]*127\.0\.0\.1[[:space:]]+localhost(\b.*)?$/d' /etc/hosts
echo "127.0.0.2 localhost" >> /etc/hosts

# Remove any previous facebook.com entry and add the required one
sed -i -E '/(^|[[:space:]])facebook\.com([[:space:]]|$)/d' /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts
