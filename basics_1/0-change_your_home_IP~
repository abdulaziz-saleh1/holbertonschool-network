#!/usr/bin/env bash
# Script to change localhost and facebook.com resolution

# Replace localhost entry
sudo sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2\tlocalhost/' /etc/hosts

# Add facebook.com -> 8.8.8.8 mapping (if not already there)
grep -q "facebook.com" /etc/hosts
if [ $? -ne 0 ]; then
    echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
else
    sudo sed -i 's/.*facebook\.com/8.8.8.8 facebook.com/' /etc/hosts
fi
